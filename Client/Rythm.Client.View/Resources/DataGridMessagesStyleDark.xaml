<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:properties="clr-namespace:Rythm.Client.View.Properties">

	<Style x:Key="DataGridColumnBackground" TargetType="{x:Type DataGridCell}">

		<Setter Property="Background" Value="LightGray"/>

		<Style.Triggers>
			<DataTrigger Binding="{Binding DataGridMessagesVisibility}" Value="True">
				<Setter Property="Visibility" Value="Visible"/>
			</DataTrigger>
			<DataTrigger Binding="{Binding DataGridMessagesVisibility}" Value="False">
				<Setter Property="Visibility" Value="Hidden"/>
			</DataTrigger>
		</Style.Triggers>

	</Style>
	
</ResourceDictionary>