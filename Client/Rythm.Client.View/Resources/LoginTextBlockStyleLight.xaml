<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:properties="clr-namespace:Rythm.Client.View.Properties">

	<Style x:Key="LoginTextBlockForeground" TargetType="{x:Type TextBlock}">
		<Setter Property="Foreground" Value="DimGray"/>
		<Style.Triggers>
			<DataTrigger Binding="{Binding IsLoginVisible}" Value="True">
				<Setter Property="Visibility" Value="Visible"/>
			</DataTrigger>
			<DataTrigger Binding="{Binding IsLoginVisible}" Value="False">
				<Setter Property="Visibility" Value="Collapsed"/>
			</DataTrigger>
		</Style.Triggers>
	</Style>
	
</ResourceDictionary>