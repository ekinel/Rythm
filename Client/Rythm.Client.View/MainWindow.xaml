<Window x:Class="Rythm.Client.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rythm.Client.View"
        mc:Ignorable="d"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="true"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Border Grid.Column="0" Grid.RowSpan="3" Background="Azure"/>
        <Border Grid.Column="1" Grid.RowSpan="3" Background="Beige"/>
        <Border Grid.Column="2" Grid.ColumnSpan="2" Background="Bisque"/>
        <Border Grid.Column="2" Grid.Row="1" Background="Tan"/>
        <Border Grid.Column="3" Grid.Row="1" Background="Wheat"/>
        <Border Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Background="Honeydew">
            <Button Content="Send" Margin="541,11,19,10" Click="Button_Click"/>
        </Border>

        <StackPanel Grid.Column="0"  Grid.RowSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Foreground="Black" FontSize="10" Text="Настройки"/>
        </StackPanel>
        <StackPanel Grid.Column="1"  Grid.RowSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Foreground="Black" FontSize="10" Text="Клиенты/группы"/>
        </StackPanel>
        <StackPanel Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Foreground="Black" FontSize="10" Text="Выбранные клиент/группа"/>
        </StackPanel>
        <StackPanel Grid.Column="2" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Foreground="Black" FontSize="10" Text="Чат"/>
        </StackPanel>
        <StackPanel Grid.Column="3" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Foreground="Black" FontSize="10" Text="Клиенты в группе"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Foreground="Black" FontSize="10" Text="Сообщение"/>
        </StackPanel>
        <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="Введите сообщение" VerticalAlignment="Top" Width="239" Grid.Column="2" Margin="23,16,0,0" Grid.Row="2"/>
    </Grid>
</Window>
