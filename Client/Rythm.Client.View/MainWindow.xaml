<Window x:Class="Rythm.Client.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:Rythm.Client.View"
        mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0,70"/>
            <ColumnDefinition Width="0,90"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0,200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0,80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <view:CommunicationParametersView Grid.Column="0" Grid.RowSpan="3"/>
        <view:UserListView Grid.Column="1" Grid.RowSpan="3"/>
        <view:UserLoginDisplayView Grid.Column="2" Grid.ColumnSpan="2"/>
        <view:TextMessageView Grid.Column="2" Grid.Row="1" Margin="1"/>
        <view:ConnectionParametersView Grid.Column="3" Grid.Row="1" BorderThickness="1" BorderBrush="LightGray" Margin="1"/>
    </Grid>
</Window>
