<UserControl x:Class="Rythm.Client.View.TextMessageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rythm.Client.View"
             xmlns:viewModel="clr-namespace:Rythm.Client.ViewModel;assembly=Rythm.Client.ViewModel"
             mc:Ignorable="d"
             xmlns:interactivity="http://prismlibrary.com/"
            interactivity:ViewModelLocator.AutoWireViewModel="True" Height="455.321" Width="731.205"
            d:DataContext="{d:DesignInstance viewModel:MessageViewModel}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Border Grid.Column="0" Grid.RowSpan="3" Background="Azure"/>
        <Border Grid.Column="1" Grid.RowSpan="3" Background="Beige"/>
        <Border Grid.Column="2" Grid.ColumnSpan="2" Background="Bisque"/>
        <Border Grid.Column="2" Grid.Row="1" Background="Tan">
            <ListBox ItemsSource="{Binding MessagesList}" >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="100"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="{Binding Name}"/>
                            <TextBlock Text="{Binding Text}" Grid.Column="1"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
        <Border Grid.Column="3" Grid.Row="1" Background="Wheat"/>
        <Border Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Background="Honeydew">
            <StackPanel Orientation="Horizontal">
                <TextBox Height="29" TextWrapping="Wrap" Margin="10,13,25,7" Width="395" Text="{Binding CurrentMessage}" />
                <Button Content="Button" Width="100" Margin="0,10,0,6"  Command="{Binding SendCommand}"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Column="0"  Grid.RowSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Foreground="Black" FontSize="10" Text="Настройки"/>
        </StackPanel>
        <StackPanel Grid.Column="1"  Grid.RowSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Foreground="Black" FontSize="10" Text="Клиенты/группы"/>
        </StackPanel>
        <StackPanel Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Foreground="Black" FontSize="10" Text="Выбранные клиент/группа"/>
        </StackPanel>
        <StackPanel Grid.Column="2" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Foreground="Black" FontSize="10" Text="Чат"/>
        </StackPanel>
        <StackPanel Grid.Column="3" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Foreground="Black" FontSize="10" Text="Клиенты в группе"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Foreground="Black" FontSize="10" Text="Сообщение"/>
        </StackPanel>
    </Grid>
</UserControl>
